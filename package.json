{
  "name": "ollot",
  "displayName": "Ollot",
  "publisher": "Sayantan710",
  "description": "Ollot brings AI assistance directly into VS Code, powered by your local Ollama models. Get instant code suggestions, explanations, and problem-solving without leaving your editor.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/GhoshSa/ollot.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "icon": "icon/icon.png",
  "categories": [
    "Chat",
    "Other"
  ],
  "activationEvents": [
    "onView:ollot-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ollot-sidebar",
          "title": "Ollot",
          "icon": "icon/icon.svg"
        }
      ]
    },
    "views": {
      "ollot-sidebar": [
        {
          "type": "webview",
          "icon": "icon/icon.svg",
          "id": "ollot.chatView",
          "name": "Chat",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "ollot.openChat",
        "title": "Open Chat",
        "category": "Ollot"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ollot.openChat",
          "when": "view == ollot.chatView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.7.9"
  },
  "files": [
    "out/**/*",
    "icon/*"
  ]
}
